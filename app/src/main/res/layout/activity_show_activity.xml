<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginHorizontal="8dp"
            android:id="@+id/actName"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            tools:text="Nome"
            android:maxLines="1"/> <!-- Nome -->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_red_light"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="130dp"/> <!-- Linha -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Descrição"
                android:textAllCaps="true"
                android:paddingLeft="5dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginHorizontal="8dp"
                android:id="@+id/actDesc"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                tools:text="@string/long_string"
                />

        </LinearLayout> <!-- Descrição -->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_red_light"
            android:layout_marginHorizontal="130dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"/><!-- Linha -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="200dp">

            <TextView
                android:id="@+id/actTag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tags"
            android:paddingHorizontal="5dp"
            android:paddingVertical="3dp"
            android:text="Conteudo_Tag_1"
            android:layout_marginHorizontal="5dp"/>

            <TextView
                android:id="@+id/actTag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tags"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:text="Conteudo_Tag_2"
                android:layout_marginHorizontal="5dp"/>

            <TextView
                android:id="@+id/actTag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tags"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:text="Conteudo_Tag_3"
                android:layout_marginHorizontal="5dp"/>

        </LinearLayout>
        <Button
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Começar"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@android:color/holo_blue_dark"/>

    </LinearLayout>

</ScrollView>