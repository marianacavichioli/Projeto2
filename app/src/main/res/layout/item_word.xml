<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary_light"
    android:paddingStart="8dp"
    android:paddingEnd="10dp">

    <RelativeLayout
        android:id="@+id/item_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_item_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="sans-serif-medium"
            android:padding="4dp"
            android:text="teste"
            android:textSize="24sp"
            android:textColor="@color/primary_text"
            android:layout_alignParentStart="true"/>

        <CheckBox
            android:id="@+id/checkBoxImage"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"
            android:clickable="false"
            android:layout_centerVertical="true"
            android:theme="@style/MyCheckBox"/>

        <CheckBox
            android:id="@+id/checkBoxVideo"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_toStartOf="@id/checkBoxImage"
            android:visibility="invisible"
            android:clickable="false"
            android:layout_marginEnd="48dp"
            android:layout_centerVertical="true"
            android:theme="@style/MyCheckBox"/>

        <CheckBox
            android:id="@+id/checkboxDeleteWord"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_toStartOf="@id/checkBoxVideo"
            android:visibility="invisible"
            android:clickable="false"
            android:layout_marginEnd="48dp"
            android:layout_centerVertical="true"
            android:theme="@style/MyCheckBox"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/divider"/>

</android.support.constraint.ConstraintLayout>